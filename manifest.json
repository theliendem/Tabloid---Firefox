{
	"manifest_version": 3,
	"name": "Tabloid",
	"version": "1.1.0",
	"description": "A browser extension that roasts you based on your tab usage, like a virtual tabloid.",
	"permissions": [
		"tabs",
		"storage",
		"scripting",
		"activeTab"
	],
	"host_permissions": [
		"<all_urls>",
		"http://fonts.googleapis.com/",
		"https://fonts.googleapis.com/"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.jpg",
			"48": "icons/icon48.jpg",
			"128": "icons/icon128.jpg"
		}
	},
	"background": {
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "icons/icon16.jpg",
		"48": "icons/icon48.jpg",
		"128": "icons/icon128.jpg"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "tabloid@example.com"
		}
	}
}